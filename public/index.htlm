            }
            
            .logo {
                width: 80px;
                height: 80px;
                font-size: 35px;
            }
        }

        /* Dark mode support */
        @media (prefers-color-scheme: dark) {
            .container {
                background: rgba(30, 30, 30, 0.95);
                color: #ffffff;
            }
            
            h1, .input-label {
                color: #ffffff;
            }
            
            .subtitle {
                color: #cccccc;
            }
        }

        /* Animations d'entr√©e */
        .container {
            animation: fadeInUp 0.8s ease;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
